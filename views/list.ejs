<%- include("header"); -%>
    <div class="box" id="heading">
      <h1> <%= listTitle %> </h1>
    </div>

    <div class="box">
      <form action="/delete" method="post">
        <% ItemLists.forEach(function(itemm){ %>
          <div class="item">
            <input type="checkbox" name="checkbox" value="<%= itemm._id %>" onChange="this.form.submit()">
            <p><%= itemm.name %></p>
          </div>
        <% }); %>
        <input type="hidden" name="listName" value="<%= listTitle %>"></input>
      </form>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="Enter your task!" autocomplete="off">
        <button type="submit" name="list" value=<%= listTitle %> >+</button>
      </form>

      </div>
    </div>
<%- include("footer"); -%>
